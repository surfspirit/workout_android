<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_checked="false">
    <shape android:shape="oval">
        <solid android:color="@color/lightGray"/>
        <stroke android:color="@color/darkGray" android:width="1dp"/>
    </shape>
</item>

<item android:state_checked="true">
    <layer-list>
        <item android:width="22dp" android:height="22dp">
            <shape android:shape="oval">
                <solid android:color="@color/lightGray"/>
                <stroke android:color="@color/darkGray" android:width="1dp"/>
            </shape>
        </item>
        <item android:width="14dp" android:height="14dp" android:gravity="center_vertical|center_horizontal">
            <shape android:shape="oval">
                <gradient
                        android:type="radial"
                        android:startColor="@color/orange"
                        android:endColor="@color/black"
                        android:gradientRadius="300%p"
                />
            </shape>
        </item>
    </layer-list>

</item>

<item>
    <shape android:shape="oval">
        <solid android:color="@color/lightGray"/>
        <stroke android:color="@color/darkGray" android:width="1dp"/>
    </shape>
</item>

</selector>