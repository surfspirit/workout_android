<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">
    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/black">

    </View>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/personal_cab_menu_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/charcoalGrey"
            android:foreground="@drawable/custom_btn_ripple">


        <TextView
                android:id="@+id/txt_menu_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:layout_width="16dp"
                android:layout_height="26dp"
                android:layout_marginEnd="15dp"
                android:rotation="180"
                android:src="@drawable/back_alt"
                android:tint="#FF8E8E93"
                app:layout_constraintBottom_toBottomOf="@+id/txt_menu_item_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_menu_item_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>