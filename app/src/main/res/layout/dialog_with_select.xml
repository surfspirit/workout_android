<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
>

    <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheelPicker"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_dialog_title"
            app:wheel_atmospheric="true"
            app:wheel_cyclic="false"
            app:wheel_indicator_color="@color/coral"
            app:wheel_indicator_size="1dp"
            app:wheel_item_text_color="@color/black"
            app:wheel_item_text_size="18dp" />

    <TextView
            android:text="Введите значение для параметра"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_dialog_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"/>

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="10dp"
            android:background="@color/darkGray"
            app:layout_constraintEnd_toEndOf="@+id/wheelPicker"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/wheelPicker"
            app:layout_constraintTop_toBottomOf="@+id/text_dialog_title" />

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="84dp"
            android:background="@color/darkGray"
            app:layout_constraintBottom_toBottomOf="@+id/wheelPicker"
            app:layout_constraintEnd_toEndOf="@+id/wheelPicker"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/wheelPicker" />
</androidx.constraintlayout.widget.ConstraintLayout>