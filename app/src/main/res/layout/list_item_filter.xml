<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkslategray"
    android:foreground="@drawable/custom_btn_ripple">


    <TextView
        android:id="@+id/list_item_genre_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@id/list_item_genre_arrow"
        tools:text="Genre" />

    <ImageView
        android:id="@+id/list_item_genre_arrow"
        android:layout_width="16dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:rotation="180"
        android:src="@drawable/back_alt"
        android:tint="@color/red_light" />

    <ImageView
            android:id="@+id/list_item_genre_lock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:tint="#9B9B9B"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_lock_white_24dp" />

</RelativeLayout>
