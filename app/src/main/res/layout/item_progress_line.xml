<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="13dp"
    android:paddingEnd="16dp"
    android:paddingBottom="17dp">
    <!--android:layout_height="128dp"-->

    <TextView
        android:id="@+id/plus_bonuses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/coral"
        android:textSize="16sp"
        tools:text="+10 WG бонус"/>

    <ru.workout24.ui.wg_bonuses_detail.BonusesProgressView
        android:id="@+id/progress_line"
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <!--android:layout_height="30dp"-->

    <TextView
        android:id="@+id/bonuses_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@color/warmGreyTwo"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="+10 WG бонусов" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="до следующего уровня"
        android:textAlignment="textEnd"
        android:textColor="@color/warmGreyTwo"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>