<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.trainings.common.LikeTrainingPickerFragment"
                                                   style="@style/ScreenBg">
    <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheelPicker"
            app:wheel_item_text_color="@color/white"
            app:wheel_cyclic="false"
            app:wheel_indicator_size="1dp"
            app:wheel_indicator_color="@color/coral"
            app:wheel_atmospheric="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_like_cont"/>
    <View android:layout_width="100dp" android:layout_height="1dp" android:background="@color/orange"
          android:id="@+id/view10"
          app:layout_constraintTop_toTopOf="@+id/wheelPicker" android:layout_marginBottom="8dp"
          app:layout_constraintBottom_toTopOf="@+id/space2" app:layout_constraintVertical_bias="0.9"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

    <View android:layout_width="100dp" android:layout_height="1dp" android:background="@color/orange"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
          app:layout_constraintBottom_toBottomOf="@+id/wheelPicker" android:id="@+id/view12"
          android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/space2"
          app:layout_constraintVertical_bias="0.100000024"/>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/space2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/wheelPicker" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/wheelPicker"/>
    <ru.workout24.utills.custom_views.CustomToolbar
            android:id="@+id/appBarLayout"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backSrc="@drawable/cross"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Вам понравилась тренировка?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="139dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/Text20spRoboto"/>
    <Button
            android:text="Продолжить"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btn_like_cont"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/OrangeButton" android:fontFamily="@font/roboto"/>
</androidx.constraintlayout.widget.ConstraintLayout>