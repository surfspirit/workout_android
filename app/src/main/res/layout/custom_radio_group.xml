<?xml version="1.0" encoding="utf-8"?>
<ru.workout24.utills.custom_views.RadioGroupConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View android:layout_width="0dp"
          android:layout_height="3dp" android:background="@color/darkGray"
          android:id="@+id/view3" app:layout_constraintTop_toTopOf="@+id/radioButton2"
          app:layout_constraintBottom_toBottomOf="@+id/radioButton2"
          app:layout_constraintEnd_toEndOf="@+id/radioButton3" android:layout_marginEnd="8dp"
          app:layout_constraintStart_toStartOf="@+id/radioButton1" android:layout_marginStart="8dp"/>

    <RadioButton style="@style/RadioButton" android:id="@+id/radioButton1"
                 app:layout_constraintStart_toStartOf="@+id/txt1"
                 app:layout_constraintEnd_toEndOf="@+id/txt1" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="parent"/>
    <RadioButton style="@style/RadioButton" android:id="@+id/radioButton2"
                 app:layout_constraintEnd_toEndOf="@+id/txt2"
                 app:layout_constraintStart_toStartOf="@+id/txt2" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="parent"/>
    <RadioButton style="@style/RadioButton" android:id="@+id/radioButton3"
                 app:layout_constraintEnd_toEndOf="@+id/txt3"
                 app:layout_constraintStart_toStartOf="@+id/txt3" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/txt2" app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/radioButton1"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp" android:fontFamily="@font/roboto_light"/>
    <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/txt1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/txt3" app:layout_constraintTop_toBottomOf="@+id/radioButton2"
            android:layout_marginTop="8dp" android:fontFamily="@font/roboto_light"/>
    <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/txt2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioButton3" android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" android:fontFamily="@font/roboto_light"/>

</ru.workout24.utills.custom_views.RadioGroupConstraintLayout>