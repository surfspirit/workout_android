<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:background="@color/black"
                                                   android:layout_height="match_parent">
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/view7"
            app:layout_constraintStart_toStartOf="@+id/iv_save" android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="@+id/iv_save" app:layout_constraintEnd_toEndOf="@+id/iv_save"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:background="@color/darkslategray"
            android:layout_width="112dp"
            android:layout_height="144dp"
            android:id="@+id/iv_save"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/ic_add_photo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:maxImageSize="70dp"
            android:clickable="true"
            android:id="@+id/btn_add_photo" app:backgroundTint="#FFFFFF" android:layout_marginTop="125dp"
            app:layout_constraintTop_toTopOf="@+id/iv_save"
            app:layout_constraintStart_toStartOf="@+id/iv_save" app:layout_constraintEnd_toEndOf="@+id/iv_save"
            android:layout_marginStart="29dp"
            android:foreground="@drawable/custom_round_ripple" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:src="@drawable/baseline_close_white_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_remove"
            android:clickable="true"
            android:visibility="visible"
            style="@style/OrangeButton"
            app:layout_constraintTop_toTopOf="@+id/iv_save"
            app:layout_constraintEnd_toEndOf="@+id/iv_save"/>
</androidx.constraintlayout.widget.ConstraintLayout>