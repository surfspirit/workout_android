<RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/spinner_background"
        android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">

    <ru.workout24.view.CustomSpinner
            android:id="@+id/spinner1"
            android:foreground="@drawable/custom_btn_ripple"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_marginStart="-5dp"
            android:dropDownVerticalOffset="42dp" />

    <ImageView
            android:layout_width="16dp"
            android:clickable="false"
            android:layout_height="26dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:rotation="270"
            android:id="@+id/iv_spinner_image"
            android:tint="@color/red_light"
            android:src="@drawable/back_alt" />

</RelativeLayout>