<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@color/black"
                                                    android:layout_marginBottom="27dp"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:foreground="@drawable/custom_btn_ripple"
            android:layout_height="wrap_content" app:srcCompat="@drawable/personal_trainings_section_background"
            android:id="@+id/iv_section_image" app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="от твоего виртуального WG тренера"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_section_desc"
            app:layout_constraintStart_toStartOf="@+id/iv_section_image" android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp" app:layout_constraintBottom_toBottomOf="@+id/iv_section_image"
            android:textSize="16sp"/>
    <TextView
            android:text="Персональные \nтренировки"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_section_name" android:textSize="22sp"
            android:textAllCaps="true" android:textStyle="bold" android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="@+id/iv_section_image"
            app:layout_constraintBottom_toTopOf="@+id/tv_section_desc" android:fontFamily="sans-serif"
            android:typeface="normal"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="36dp"
            style="@style/OrangeButton"
            android:text="Получить прямо сейчас"

            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/btn_get_now"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="7dp" android:layout_marginBottom="7dp" app:layout_constraintTop_toBottomOf="@+id/iv_section_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>