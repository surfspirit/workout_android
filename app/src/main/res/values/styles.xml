<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
    </style>

    <style name="EdiTextTheme" parent="AppTheme">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">#C9FFFFFF</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="EdiTextThemeDark" parent="AppTheme">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
    </style>

    <style name="EdiTextLayoutErrorTheme" parent="AppTheme">
        <item name="colorControlActivated">#FF5247</item>
        <item name="colorControlHighlight">#FF5247</item>
        <item name="android:textColorHint">#FF5247</item>
        <item name="android:textColor">#FF5247</item>
        <item name="android:textColorPrimary">#FF5247</item>
        <item name="colorError">#FF5247</item>
        <item name="colorPrimary">#FF5247</item>
        <item name="colorAccent">#FF5247</item>
        <item name="colorPrimaryDark">#FF5247</item>
        <item name="editTextColor">#FF5247</item>
    </style>

    <style name="EdiTextErrorTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.Launcher" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="ScreenBg">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OrangeButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/orange_btn_text</item>
        <item name="android:background">@drawable/orange_btn_bg</item>
        <item name="android:foreground">@drawable/custom_btn_ripple</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OrangeRoundedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@drawable/orange_btn_text</item>
        <item name="android:foreground">@drawable/custom_btn_ripple</item>
    </style>

    <style name="BlackButton">
        <item name="android:background">@color/transparentBlack</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:foreground">@drawable/custom_btn_ripple</item>
    </style>

    <style name="BlackRoundedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/black_rounded_button_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:foreground">@drawable/custom_btn_ripple</item>
    </style>

    <style name="TabView">
        <item name="background">@android:color/transparent</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="android:textSize">15sp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="TabViewTrainings">
        <item name="background">@color/black</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="android:textSize">15sp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextColor">#a6a6a6</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Toolbar">
        <item name="android:paddingTop">35dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:outlineAmbientShadowColor">@android:color/transparent</item>
        <item name="android:outlineSpotShadowColor">@android:color/transparent</item>
        <!--<item name="android:paddingBottom">16dp</item>-->
    </style>

    <style name="RadioButton">
        <item name="android:background">@drawable/radio_button_bg</item>
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="Text22sp">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text20spRoboto">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Text18sp">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text16sp">
        <item name="android:lineHeight">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text14sp">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:height">44dp</item>
        <item name="android:background">@drawable/spinner_bottomline_dropdown</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="customSpinnerDialog">
        <item name="android:height">44dp</item>
        <item name="android:background">@color/darkGray</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="DrawerText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="OptionsDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
<!--        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="SwitchStyle">
<!--        app:sb_background="#D7D7D7"-->
<!--        app:sb_checked_color="#E9453A"-->
<!--        app:sb_shadow_effect="true"-->
<!--        app:sb_show_indicator="false"-->
        <item name="sb_background">#D7D7D7</item>
        <item name="sb_checked_color">#E9453A</item>
        <item name="sb_show_indicator">false</item>
        <item name="sb_shadow_effect">true</item>
    </style>

</resources>
